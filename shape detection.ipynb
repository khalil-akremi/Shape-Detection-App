    with gr.Blocks(title="D√©tecteur de Formes G√©om√©triques", theme=gr.themes.Soft()) as interface:
        gr.Markdown("# üîç D√©tecteur de Formes G√©om√©triques")
        gr.Markdown("T√©l√©chargez une image pour d√©tecter et identifier les formes g√©om√©triques (triangles, carr√©s, rectangles, cercles)")
        
        with gr.Row():
            with gr.Column():
                input_image = gr.Image(
                    type="pil", 
                    label="üì∏ Image d'entr√©e",
                    height=400
                )
                
                detect_btn = gr.Button(
                    "üîç D√©tecter les formes", 
                    variant="primary",
                    size="lg"
                )
                
                gr.Markdown("### Instructions:")
                gr.Markdown("""
                - T√©l√©chargez une image contenant des formes g√©om√©triques
                - Les formes doivent √™tre suffisamment grandes (aire > 500 pixels)
                - Fonctionne mieux avec des formes aux contours nets
                - Supporte: triangles, carr√©s, rectangles, cercles
                """)
            
            with gr.Column():
                output_image = gr.Image(
                    label="üéØ Formes d√©tect√©es", 
                    height=400
                )
                
                output_text = gr.Textbox(
                    label="üìä R√©sum√© de d√©tection",
                    lines=8,
                    max_lines=15
                )
        
        # Examples section
        gr.Markdown("### üìù Exemples")
        gr.Examples(
            examples=[
                # You can add example images here if you have them
                # ["path/to/example1.jpg"],
                # ["path/to/example2.jpg"],
            ],
